{
  "name": "twins/erp",
  "description": "Twins \u2013 Fuel & Transport ERP (Laravel-style source, no vendor).",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "laravel/framework": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "classmap": [
      "database/seeders",
      "database/factories"
    ]
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "prefer-stable": true,
  "minimum-stability": "stable"
}